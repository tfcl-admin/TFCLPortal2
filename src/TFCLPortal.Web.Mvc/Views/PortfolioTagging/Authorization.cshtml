@model List<TFCLPortal.TaggedPortfolios.Dto.TaggedPortfolioListDto>
@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<main class='main-content bgc-grey-100' style="padding-top:50px">
    <div class="row page-title">
        <div class="col-md-6 text-left">
            <h4 class="page-title-text">
                Portfolio Transfer Authorization
            </h4>
            <h6 class="page-title-breadcrumbs">
                <a href="~/Dashboard/Dashboard">Home</a> > Portfolio Transfer Authorization
            </h6>
        </div>
        <div class="col-md-6 text-right">
            <a href="~/Dashboard/Dashboard" class="btn btn-sm btn-outline-success bg1 eft-1" title="Back"><i class="fa fa-angle-double-left"></i> Back To Home </a>
        </div>
    </div>

    <div class="card p-10 mB-20">
        <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Sr#</th>
                    <th>Client ID</th>
                    <th>Client Name</th>
                    <th>School/Business Name</th>
                    <th>Transferred From</th>
                    <th>Transferred To</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    int i = 0;
                    foreach (var item in Model)
                    {
                        i = i + 1;
                <tr>
                    <td>@i</td>
                    <td>@item.ClientId</td>
                    <td>@item.ClientName</td>
                    <td>@item.SchoolName</td>
                    <td>@item.OldUserName</td>
                    <td>@item.NewUserName</td>
                    <td>
                        <a href="~/portfoliotagging/Authorize?id=@item.Id&&authorize=true"><i class="fa fa-check-circle text-success" aria-hidden="true"></i> Authorize</a>
                    </td>
                    <td>
                        <a href="~/portfoliotagging/Authorize?id=@item.Id&&authorize=false"><i class="fa fa-times-circle text-danger" aria-hidden="true"></i> Reject</a>
                    </td>
                </tr>
                    }
                }
            </tbody>
        </table>
    </div>




</main>