@model TFCLPortal.McrcRecords.Dto.CreateMcrcRecordDto

@{
    ViewData["Title"] = "CreateMCRC";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}
<style>
    .pageloader {
        position: fixed;
        left: 0px;
        top: 0px;
        width: 100%;
        height: 100%;
        z-index: 9999;
        background: url('/Theame/images/loader.gif') 50% 50% no-repeat rgb(249, 249, 249);
        opacity: .8;
    }
</style>
<main class='main-content bgc-grey-100' style="padding-top:50px">
    <div class="row page-title">
        <div class="col-md-6 text-left">
            <h4 class="page-title-text">
                Create MCRC
            </h4>
            <h6 class="page-title-breadcrumbs">
                <a href="~/Dashboard/Dashboard">Home</a> > Management Committee of Risk and Compliance > Create MCRC
            </h6>
        </div>
        <div class="col-md-6 text-right">
            @*<button class="btn btn-sm btn-outline-success" onclick="$('#filterForm').toggle();"><i class="fa fa-filter"></i> Filter Records</button>*@
            <a href="~/MCRC/Index" class="btn btn-sm btn-outline-success bg1 eft-1" title="Back To List"><i class="fa fa-angle-double-left"></i> Back To List </a>
            <a href="~/Dashboard/Dashboard" class="btn btn-sm btn-outline-success bg1 eft-1" title="Back"><i class="fa fa-angle-double-left"></i> Back To Home </a>
        </div>
    </div>
    <div class="card p-10 mB-20">
        <div class="pageloader d-none"></div>

        <form asp-action="CreateMcrc" method="post">


            <div class="row" style="margin-top:50px">

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="detailHeading">
                            Chair Person
                        </label>
                        @Html.DropDownListFor(m => m.User1Id, ViewBag.McrcUserList as SelectList, "Select 1st MCRC Member", new { @class = "form-control text-capitalize" })
                        <span asp-validation-for="User1Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="detailHeading">
                            Second MCRC Member
                        </label>
                        @Html.DropDownListFor(m => m.User2Id, ViewBag.McrcUserList as SelectList, "Select 2nd MCRC Member", new { @class = "form-control text-capitalize" })
                        <span asp-validation-for="User2Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="detailHeading">
                            Third MCRC Member
                        </label>
                        @Html.DropDownListFor(m => m.User3Id, ViewBag.McrcUserList as SelectList, "Select 3rd MCRC Member", new { @class = "form-control text-capitalize" })
                        <span asp-validation-for="User3Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="detailHeading">
                            Fourth MCRC Member
                        </label>
                        @Html.DropDownListFor(m => m.User4Id, ViewBag.McrcUserList as SelectList, "Select 4th MCRC Member", new { @class = "form-control text-capitalize" })
                        <span asp-validation-for="User4Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="detailHeading">
                            Fifth MCRC Member
                        </label>
                        @Html.DropDownListFor(m => m.User5Id, ViewBag.McrcUserList as SelectList, "Select 5th MCRC Member", new { @class = "form-control text-capitalize" })
                        <span asp-validation-for="User5Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="detailHeading">
                            Comments
                        </label>
                        <input asp-for="Status" class="form-control" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>


                <div class="col-md-4 d-none">
                    <div class="form-group">
                        <label class="detailHeading">
                            Application #
                        </label>
                        <input asp-for="ApplicationId" class="form-control" value="@ViewBag.AppId" />
                    </div>
                </div>


                <div class="form-group  d-none">
                    <label asp-for="IsActive" class="control-label"></label>
                    <input asp-for="IsActive" value="true" />
                </div>

                <div class="col-md-12 text-right" style="margin-top:50px">

                    <input type="submit" onclick="clicked()" value="Create MCRC" class="btn btn-sm btn-outline-success bg1 eft-1" />

                </div>

            </div>

        </form>
    </div>

</main>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

<script>
    function clicked() {
        $(".pageloader").toggleClass("d-none");
    }
</script>
