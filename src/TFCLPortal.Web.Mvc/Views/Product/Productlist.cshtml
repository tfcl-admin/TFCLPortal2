@model  IEnumerable<TFCLPortal.ProductMarkupRates.Dto.ProductListDto>
@{
    ViewData["Title"] = "Productlist";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<h2>Productlist</h2>

<main class='main-content bgc-grey-100'>
    <div id='mainContent'>
        <div class="container-fluid">
            
            <div class="row">
                <div class="col-md-12">
                    <div class="bgc-white bd bdrs-3 p-20 mB-20">
                        <div class="row card p-10 mB-20">
                            <h4>Product list</h4>
                            <div style="text-align: right; float: right;width: 100%;position:absolute;">
                                <a asp-action="AddProduct" class="btn btn-success bg1 eft-1" title="Back">Create New<span></span></a>
                                <a href="~/Application/ApplicationDashboard" class="btn btn-primary bg1 eft-1" title="Back">Back<span></span></a>
                            </div>
                        </div>
                        <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayName("Product Name")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Product Detail")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Slabs")
                                    </th>
                                    <th>
                                        @Html.DisplayName("MinAge-MaxAge")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Short Code")
                                    </th>
                                    <th>Edit</th>
                                    <th>Product Detail</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductDetail)
                                    </td>
                                    <td>
                                        @item.SlabMin - @item.SlabMax
                                    </td>
                                    <td>
                                        @item.AgeMin - @item.AgeMax
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ShortCode)
                                    </td>
                                    <td>
                                        <a asp-action="UpdateProduct" asp-route-id="@item.Id" class="edit-btn"><i class="fa fa-pencil" aria-hidden="true"></i></a>

                                    </td>
                                    <td>
                                        <a asp-action="ProductDetaillist" asp-route-FkProduct="@item.Id" class="edit-btn"><i class="fa fa-desktop" aria-hidden="true"></i></a>
                                    </td>
                                </tr>
                                    }
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>