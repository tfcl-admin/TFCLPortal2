@model TFCLPortal.SalesDetails.Dto.SalesDetailListDto

@{ int counter = 1; }
<style>
    .modal-title {
        text-align: center;
        width: 100%;
    }

    .striped-border {
        border: 2px dashed #000;
        width: 85%;
        margin: auto;
        margin-top: 1%;
