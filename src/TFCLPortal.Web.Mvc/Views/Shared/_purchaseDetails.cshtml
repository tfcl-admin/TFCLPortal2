<!--Approved Modal -->
<div class="modal fade" id="_PurchaseDetail_approved" tabindex="-1" role="dialog" style="z-index: 1100;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">Approved Confirmation</div>
                <button type="button" class="close" data-dismiss="modal" aria-div="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to mark this form Screened?
            </div>
            <div class="modal-footer">
                <button id="btnScreenPurD" type="button" class="btn btn-success bg1 ef1">Mark Screened</button>
                <button data-dismiss="modal" type="button" class="btn btn-danger bg1 ef1">Cancel</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<!--discrepent Modal -->
<div class="modal fade" id="_PurchaseDetail_discrepant" tabindex="-1" role="dialog" style="z-index: 1100;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">discrepent Confirmation</div>
                <button type="button" class="close" data-dismiss="modal" aria-div="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <textarea placeholder="Type Reason" id="commentIdPurD"></textarea>
                <span class="text-danger" style="display:none" id="comment_errorPurD">this field is required</span>
            </div>
            <div class="modal-footer">
                <button type="button" id="btndiscrepentPurD" class="btn btn-success bg1 ef1">Mark Discrepent</button>
                <button type="button" class="btn btn-danger bg1 ef1" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


<script>

        $('#commentId').attr('required', 'required');

        $(document).ready(function () {
            //alert('@ViewBag.PersonalAction');
            btnChange('@ViewBag.PurchaseAction');
        });


        function btnChange(currentState) {
            //alert(currentState);
            if (currentState == "Screened") {
                $('#screenBtnPurD').html("<i class='fa fa-check'></i>  Marked Screened");
                //$('#screenBtnPurD').click(false);


                $('#discrepentBtnPurD').html("Discrepent");
                //$("#discrepentBtnPurD").attr("data-toggle", "modal");
                //$("#discrepentBtnPurD").attr("data-target", "#_businessPlan_discrepent");
                //$("#discrepentBtnPurD").attr("href", "");
                //$('#screenBtnPurD').click(true);
            }
            else if (currentState == "Discrepent") {

                $('#discrepentBtnPurD').html("<i class='fa fa-times'></i> Marked Discrepent");
                //$('#discrepentBtnPurD').click(false);

                $('#screenBtnPurD').html("Screen");
                //$("#screenBtnPurD").attr("data-toggle", "modal");
                //$("#screenBtnPurD").attr("data-target", "#_businessPlan_approved");
                //$("#screenBtnPurD").attr("href", "");
                //$('#screenBtnPurD').click(true);

            }
            else if (currentState == "Hide") {
                $('#screenBtnPurD').toggleClass("d-none");
                $('#discrepentBtnPurD').toggleClass("d-none");
            }
        }

        $('#btnScreenPurD').click(function () {
            debugger;
            var comment = $('#commentIdPurD').val();
            var Id = $('#ApplicationId').val();
                $.ajax({
                        type: 'POST',
                        datatype: "json",
                        contenttype: 'application/json; charset=utf-8',
                        url: '@Url.Content("~/Dashboard/MarkScreened")',
                    data: { 'ApplicationId': Id, 'Screen': 'Purchase Details'} ,
                    success: function (data) {



                        $('.close').click();

                        if (data.result.includes("successfully")) {
                            abp.notify.success(data.result, 'Mark Screened');
                        }
                        else {
                            abp.notify.info(data.result, 'Mark Screened');
                        }

                        btnChange("Screened");


                        },
                        error: function (data) {
                            debugger
                            abp.notify.error(data.result, 'Error');
                         }


                    });
        });
        $('#btndiscrepentPurD').click(function () {
            debugger;
            if (!$('#commentIdPurD').val()) {
                $('#comment_errorPurD').css("display", "block");;
                return false;
            } else {
                $('#comment_errorPurD').css("display", "none");
            }
            var comment = $('#commentIdPurD').val();
            var Id = $('#ApplicationId').val();
                $.ajax({
                        type: 'POST',
                        datatype: "json",
                        contenttype: 'application/json; charset=utf-8',
                        url: '@Url.Content("~/Dashboard/MarkDiscrepent")',
                    data: { 'ApplicationId': Id, 'Screen': 'Purchase Details','Reason': comment },
                    success: function (data) {

                            $('.close').click();

                            if (data.result.includes("successfully")) {
                                abp.notify.success(data.result, 'Mark Discrepent');

                            }
                            else {
                                abp.notify.info(data.result, 'Mark Discrepent');
                        }

                        btnChange("Discrepent");

                        $('#commentIdPurD').val("");

                        },
                        error: function (data) {
                            debugger;
                            abp.notify.error(data.result, 'Error');
                        }
                    });
            });
</script>



