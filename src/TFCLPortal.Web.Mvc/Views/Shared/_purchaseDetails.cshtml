                                                        <td>@(item.QuaterlyPurchaseFrequency == null || item.QuaterlyPurchaseFrequency == "" ? "0" : string.Format("{0:#,##0}",  decimal.Parse((item.QuaterlyPurchaseFrequency).Replace(",", ""))))</td>
                                                        <td style="text-align:right">@(item.QuaterlyTotal == null || item.QuaterlyTotal == "" ? "0" : string.Format("{0:#,##0}",  Int32.Parse((item.QuaterlyTotal).Replace(",", ""))))</td>
