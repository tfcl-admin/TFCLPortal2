@model List<TFCLPortal.NotificationLogs.Dto.NotificationLogListDto>
@{
    ViewData["Title"] = "Notifications";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
    int i = 0;
}

<main class='main-content bgc-grey-100' id="widget" style="padding-top:70px">

    <div class="row page-title">
        <div class="col-md-6 text-left">
            <h4 class="page-title-text">
                All Notifications
            </h4>
            <h6 class="page-title-breadcrumbs">
                <a href="~/Dashboard/Dashboard">Home</a> > Notifications
            </h6>
        </div>
        <div class="col-md-6 text-right">
            @*<button class="btn btn-sm btn-outline-success" onclick="$('#filterForm').toggle();"><i class="fa fa-filter"></i> Filter Records</button>*@
            <a href="~/Dashboard/Dashboard" class="btn btn-sm btn-outline-success bg1 eft-1" title="Back"><i class="fa fa-angle-double-left"></i> Back To Home </a>
        </div>
    </div>
    <div class="card p-10 mB-20">

        <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>
                        Sr
                    </th>
                    <th style="text-align:left !important">
                        Title
                    </th>
                    <th style="text-align:left !important">
                        Details
                    </th>
                    <th style="text-align:left !important">
                        Date
                    </th>
                    <th style="text-align:left !important">
                        Time
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td> @{i = i + 1;} @i</td>
                    <td style="text-align:left !important">
                        @Html.DisplayFor(modelItem => item.title)
                    </td>
                    <td style="text-align:left !important">
                        @Html.DisplayFor(modelItem => item.Body)
                    </td>
                    <td style="text-align:left !important">
                        @string.Format("{0:dd MMM yyyy}", item.CreationTime)
                    </td>
                    <td style="text-align:left !important">
                        @string.Format("{0:hh:mm tt}", item.CreationTime)
                    </td>
                </tr>
                }
            </tbody>
        </table>

        @*<div class="row">


            @foreach (var item in Model)
            {
                <div class="col-md-12">

                    <div class="card p-10 mB-20 row">
